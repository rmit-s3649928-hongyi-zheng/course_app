<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :course_name %>
  </div>

  <div class="field">
    <%= form.label :prerequisite %>
    <%= form.text_field :prerequisite, id: :course_prerequisite %>
  </div>
  
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :course_description,size:200 %>
  </div>  

  <div class="field">
    <%= form.label :category_id %>
    <div class = "checkbox-inline">
    <%= collection_check_boxes(:course,:category_ids, Category.all, :id, :name,item_wrapper_class: 'custom-control custom-control-inline') %>
    </div>
  </div>
  
  <div class="field form-group">
    <%= form.label :location_id %>
    <div class = "checkbox-inline">
    <%= collection_check_boxes(:course,:location_ids, Location.all, :id, :name,item_wrapper_class: 'custom-control custom-control-inline') %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
